<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Schedule - Campus Wellness</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .schedule-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 2rem;
    }

    .schedule-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .schedule-header h2 {
      color: #2c3e50;
      margin: 0;
    }

    .back-link {
      color: #3498db;
      text-decoration: none;
      font-weight: 500;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .filters {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
    }

    .filter-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
    }

    .filter-group label {
      margin-bottom: 0.5rem;
      color: #2c3e50;
      font-weight: 500;
    }

    .filter-group input,
    .filter-group select {
      padding: 0.75rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 1rem;
    }

    .schedule-table-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .schedule-table {
      width: 100%;
      border-collapse: collapse;
    }

    .schedule-table thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .schedule-table th {
      padding: 1rem;
      text-align: left;
      font-weight: 600;
    }

    .schedule-table td {
      padding: 1rem;
      border-bottom: 1px solid #ecf0f1;
    }

    .schedule-table tbody tr:hover {
      background: #f8f9fa;
    }

    .slot-badge {
      display: inline-block;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .slot-available {
      background: #d4edda;
      color: #155724;
    }

    .slot-warning {
      background: #fff3cd;
      color: #856404;
    }

    .slot-full {
      background: #f8d7da;
      color: #721c24;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .btn-delete {
      padding: 0.5rem 1rem;
      background: #e74c3c;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.3s;
    }

    .btn-delete:hover {
      background: #c0392b;
    }

    .empty-state {
      text-align: center;
      padding: 3rem;
      color: #7f8c8d;
    }

    .empty-state h3 {
      margin-bottom: 1rem;
    }

    .btn-create {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: #667eea;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      color: #7f8c8d;
      font-size: 0.9rem;
    }
  </style>
</head>

<body>
  <%- include('../partials/header', { navHtml: '<a href="/logout" class="btn">LOG OUT</a>' }) %>
  
  <main class="main-content">
    <div class="schedule-container">
      <div class="schedule-header">
        <h2>My Schedule</h2>
  <a href="/users/<%= userid %>" class="back-link">‚Üê Back to Dashboard</a>
      </div>

      <!-- Statistics -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-value"><%= totalSlots %></div>
          <div class="stat-label">Total Slots</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= totalBooked %></div>
          <div class="stat-label">Total Booked</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= availableCapacity %></div>
          <div class="stat-label">Available Spots</div>
        </div>
      </div>

      <!-- Filters -->
      <div class="filters">
        <div class="filter-row">
          <div class="filter-group">
            <label for="filterDate">Date</label>
            <input type="date" id="filterDate" onchange="filterSchedule()">
          </div>
          <div class="filter-group">
            <label for="filterStatus">Status</label>
            <select id="filterStatus" onchange="filterSchedule()">
              <option value="">All</option>
              <option value="available">Available</option>
              <option value="limited">Limited Spots</option>
              <option value="full">Fully Booked</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Schedule Table -->
      <div class="schedule-table-container">
        <% if (schedule.length === 0) { %>
          <div class="empty-state">
            <h3>üìÖ No availability slots found</h3>
            <p>You haven't set any availability slots yet.</p>
            <a href="/doctors/<%= userid %>/availability/create" class="btn-create">Create Availability Slot</a>
          </div>
        <% } else { %>
          <table class="schedule-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time Slot</th>
                <th>Duration</th>
                <th>Max Patients</th>
                <th>Booked</th>
                <th>Available</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="scheduleTableBody">
              <% schedule.forEach(slot => { 
                const availableSlots = slot.max_patients - slot.booked_slots;
                const statusClass = availableSlots > 5 ? 'slot-available' : 
                                   availableSlots > 0 ? 'slot-warning' : 'slot-full';
                const statusText = availableSlots > 5 ? 'Available' : 
                                  availableSlots > 0 ? `${availableSlots} left` : 'Full';
              %>
              <% const __d = new Date(slot.date); const __ds = __d.getFullYear() + '-' + String(__d.getMonth()+1).padStart(2,'0') + '-' + String(__d.getDate()).padStart(2,'0'); %>
              <tr data-date="<%= __ds %>" data-status="<%= statusClass %>">
                <td><%= new Date(slot.date).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                <td><%= slot.start_time.slice(0,5) %> - <%= slot.end_time.slice(0,5) %></td>
                <td><%= slot.duration %> min</td>
                <td><%= slot.max_patients %></td>
                <td><%= slot.booked_slots %></td>
                <td><%= availableSlots %></td>
                <td>
                  <span class="slot-badge <%= statusClass %>"><%= statusText %></span>
                </td>
                <td>
                  <div class="action-buttons">
                    <button class="btn-delete" data-slot-id="<%= slot.id %>" onclick="deleteSlot(this.dataset.slotId, false)">Delete</button>
                    <button class="btn-delete" style="background:#8e44ad" data-slot-id="<%= slot.id %>" onclick="deleteSlot(this.dataset.slotId, true)">Delete + cancel bookings</button>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script>
    function filterSchedule() {
      const filterDate = document.getElementById('filterDate').value;
      const filterStatus = document.getElementById('filterStatus').value;
      const rows = document.querySelectorAll('#scheduleTableBody tr');

      rows.forEach(row => {
        let showRow = true;

        // Filter by date
        if (filterDate) {
          const rowDate = row.getAttribute('data-date');
          if (rowDate !== filterDate) {
            showRow = false;
          }
        }

        // Filter by status
        if (filterStatus) {
          const rowStatus = row.getAttribute('data-status');
          if (filterStatus === 'available' && rowStatus !== 'slot-available') {
            showRow = false;
          } else if (filterStatus === 'limited' && rowStatus !== 'slot-warning') {
            showRow = false;
          } else if (filterStatus === 'full' && rowStatus !== 'slot-full') {
            showRow = false;
          }
        }

        row.style.display = showRow ? '' : 'none';
      });
    }

    async function deleteSlot(slotId, force) {
      const msg = force ?
        'This will cancel all booked appointments in this slot and notify students. Proceed?' :
        'Are you sure you want to delete this availability slot?';
      if (!confirm(msg)) {
        return;
      }

      try {
        const response = await fetch(`/availability/${slotId}?force=${force ? 'true' : 'false'}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          const data = await response.json();
          alert(data.message || 'Availability slot deleted successfully!');
          location.reload();
        } else {
          const data = await response.json();
          alert('Error: ' + (data.message || 'Failed to delete slot'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }
  </script>
</body>

</html>
