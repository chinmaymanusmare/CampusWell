<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Book Appointment</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .form-container {max-width:480px;margin:30px auto;padding:28px;background:#fff;}
    .form-title {text-align:center;font-size:1.6rem;margin-bottom:24px;}
    .form-group {display:flex;gap:12px;align-items:center;margin-bottom:14px;}
    .form-group label {flex:0 0 30%;font-weight:500;}
    .form-group select,.form-group input {flex:1;padding:10px;border:1px solid #ccc;border-radius:5px;background:#f5f5f5;}
    .actions {text-align:center;margin-top:24px;}
    .btn {background:#0d6efd;color:#fff;text-decoration:none;border:none;padding:12px 26px;border-radius:6px;font-weight:600;cursor:pointer;display:inline-block;}
    .btn-secondary {background:#0d6efd;margin-top:12px;}
  </style>
</head>
<body>
  <%- include('partials/header', { navHtml: '<a href="/logout" class="btn">LOG OUT</a>' }) %>
  <main class="main-content">
    <div class="form-container">
      <h2 class="form-title">Book Appointment</h2>
      <form action="/book-appointment" method="POST">
        <div class="form-group">
          <label for="doctor">Doctor</label>
          <select id="doctor" name="doctor" required>
            <option value="" disabled selected>Select</option>
            <% if (Array.isArray(doctors) && doctors.length) { %>
              <% doctors.forEach(d => { %>
                <option value="<%= d.id %>,<%= d.name %>"><%= d.name %> (<%= d.specialization || 'General' %>)</option>
              <% }) %>
            <% } else { %>
              <option value="" disabled>No doctors available</option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" id="date" name="date" required />
        </div>
        <div class="form-group">
          <label for="time">Time</label>
          <select id="time" name="time" required>
            <option value="" disabled selected>Select</option>
            <% if (Array.isArray(timeSlots) && timeSlots.length) { %>
              <% timeSlots.forEach(t => { %>
                <option value="<%= t %>"><%= t %></option>
              <% }) %>
            <% } else { %>
              <option value="" disabled>No time slots</option>
            <% } %>
          </select>
        </div>
        <div class="actions">
          <button type="submit" class="btn">Book</button><br />
          <a href="/users/<%= userid %>" class="btn btn-secondary">Back to Dashboard</a>
        </div>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>